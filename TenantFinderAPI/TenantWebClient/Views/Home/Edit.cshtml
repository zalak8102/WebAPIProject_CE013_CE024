@model TenantFinderAPI.Models.House

@{
    ViewData["Title"] = "Edit";
    Layout = "./_LayoutHome.cshtml";
}

<h1>Edit</h1>

<h4>House</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="hid" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="no" class="control-label">House No:</label>
                <input asp-for="no" class="form-control" />
                <span asp-validation-for="no" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label">Soc/Flat Name:</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="area" class="control-label">Area:</label>
                <input asp-for="area" class="form-control" />
                <span asp-validation-for="area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label">City:</label>
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="category" class="control-label">Category:</label>
                <input asp-for="category" class="form-control" />
                <span asp-validation-for="category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rent" class="control-label">Rent:</label>
                <input asp-for="rent" class="form-control" />
                <span asp-validation-for="rent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reqtenant" class="control-label">Req. Tenant:</label>
                <input asp-for="reqtenant" class="form-control" />
                <span asp-validation-for="reqtenant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
