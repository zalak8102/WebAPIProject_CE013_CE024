@model TenantFinderAPI.Models.Tenant

@{
    ViewData["Title"] = "Add";
}

<h1>Register</h1>

<h4>Tenant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tname" class="control-label">Name:</label>
                <input asp-for="tname" class="form-control" />
                <span asp-validation-for="tname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone" class="control-label">Contact No:</label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="catg" class="control-label">Your Category:</label>
                <input asp-for="catg" class="form-control" />
                <span asp-validation-for="catg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reqhouse" class="control-label">Req. House:</label>
                <input asp-for="reqhouse" class="form-control" />
                <span asp-validation-for="reqhouse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    Already Registered?
    <a type="button" class="btn btn-primary" asp-controller="home" asp-action="login">Login</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
